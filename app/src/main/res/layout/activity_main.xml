<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/perfume"
    android:padding="16dp"
    tools:context=".controller.MainActivity">

    <ImageView
        android:id="@+id/app_title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/geoquiz"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/capitales_btn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:padding="20dp"
        android:text="Capitales"
        />

    <TextView
        android:id="@+id/dernier_score_cap_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginBottom="5sp"
        />

    <Button
        android:id="@+id/adm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="Autour du Monde"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dernier_score_adm_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginBottom="5sp"
        />

    <Button
        android:id="@+id/flags_btn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:padding="20dp"
        android:text="Drapeaux"
        />

    <TextView
        android:id="@+id/dernier_score_flags_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/fr_btn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:padding="20dp"
        android:text="France"
        />

    <TextView
        android:id="@+id/dernier_score_fr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginBottom="5sp"
        />

</LinearLayout>